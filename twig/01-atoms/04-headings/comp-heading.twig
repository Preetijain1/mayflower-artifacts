{% if compHeading.color %}
  {% set modifier = "ma__comp-heading--" ~ compHeading.color %}
{% endif %}

{% if compHeading.sub %}
  <h3 class="ma__comp-heading {{modifier}}" {% if compHeading.id %}id="{{compHeading.id}}"{% endif %}>
    {{ compHeading.title }}
  </h3>
{% else %}
  <h2 class="ma__comp-heading {{modifier}}" {% if compHeading.id %}id="{{compHeading.id}}"{% endif %}>
    {{ compHeading.title }}
  </h2>
{% endif %}

