<div class="ma__contact-group">
  <h6 class="ma__contact-group__name">
    {% include contactGroup.icon %}
    <span>{{contactGroup.name}}</span>
  </h6>
  {% for item in contactGroup.items %}
    <div>
      {% if item.label %}
        <span class="ma__contact-group__label">{{item.label}}:</span>
      {% endif %}
      {% if contactGroup.type == "phone" %}
        <a href="tel:+{{item.link}}" class="ma__contact-group__value ma__contact-group__value--phone">{{item.value}}</a>
      {% else %}
        <a href="mailto:{{item.link}}" class="ma__contact-group__value ma__contact-group__value--email">{{item.value}}</a>
      {% endif %}
    </div>
    {% if item.details %}
      <p class="ma__contact-group__details">{{item.details}}</p>
    {% endif %}
  {% endfor %}
</div>
